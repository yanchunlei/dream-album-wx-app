}
.topClass{
    position: absolute;
    height:100px;
    width:100%;
    background-color: #ff5956;
}
.avautarClass{
    position: absolute;
    height:100px;
    width:90%;
    background-color: #fff;
    margin-top:40px;
    margin-left:5%; 
