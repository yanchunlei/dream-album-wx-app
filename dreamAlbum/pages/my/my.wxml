<view class="allTop">
    <view class="topClass"></view>
    <view class="avautarClass">
        <view class="collectClass {{currentTab==0?'on':''}}" bindtap="swichNav" data-id="0">
            <view>收藏</view>
            <view class="countClass">{{collectCount}}</view>
        </view>
        <view class="verticalClass">|</view>
        <view class="myClass {{currentTab==1?'on':''}}"  bindtap="swichNav" data-id="1">
            <view>我的</view>
            <view class="countClass">{{myCount}}</view>
        </view>
    </view>
    <image class="userinfo-avatar" src="{{avatarUrl}}" background-size="cover"></image>
</view>
<!--模版列表-->
<view class="mobileListBorder">
     <scroll-view scroll-y="true"  wx:if="{{items.length>0}}" bindscrolltoupper="refreshData" style="height:{{winHeight-150}}px;">
        <view class="main">
            <view wx:for="{{items}}" wx:key="{{itemsss}}" class="subMain" style="width:{{winWidth/2}}px;height:{{winWidth/2}}px;">
                <view class="subMainImage">
                    <image src="../../image/background-down.png" class="downImage {{index%2==1?'on':''}}"/>
                    <image src="../../image/background-up.png" class="upImage {{index%2==1?'on':''}}"/>
                    <image class="images {{index%2==1?'on':''}} {{item.complete==0?'no':''}}" bindtap="previewImage"  data-albumid="{{item.id}}" src="{{item.cover}}"/>
                    <image wx:if="{{item.complete==0}}" src="../../image/nofinish.jpg" class="finishImage {{index%2==1?'on':''}}"/>
                </view>
                <view class="subMainText {{index%2==1?'on':''}}">{{item.title}}</view>
            </view>
        </view>
    </scroll-view>
</view>